<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pushparaj.firebasenotification.ChangeStatus">
    <include layout="@layout/toolbar_layout" android:id="@+id/toolbar_id"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignStart="@+id/Change_Status_Edit_Status"
        android:layout_alignLeft="@+id/Change_Status_Edit_Status"
        android:id="@+id/Change_Status_Text_Status"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:layout_below="@+id/Change_Status_Text_Status"
        android:id="@+id/Change_Status_Edit_Status" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/update"
        android:onClick="ChnageStatusClicked"
        android:layout_below="@+id/Change_Status_Edit_Status"
        android:layout_marginTop="50dp"/>
</RelativeLayout>
